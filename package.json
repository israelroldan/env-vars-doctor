{
  "name": "env-vars-doctor",
  "version": "1.2.0",
  "type": "module",
  "description": "Environment variable management for monorepos - sync, validate, and diagnose .env files across workspaces",
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "monorepo",
    "workspace",
    "cli",
    "validation"
  ],
  "author": "Israel Roldan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/israelroldan/env-vars-doctor"
  },
  "homepage": "https://github.com/israelroldan/env-vars-doctor#readme",
  "bugs": "https://github.com/israelroldan/env-vars-doctor/issues",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "env-vars-doctor": "./bin/env-vars-doctor.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins/types.d.ts",
      "import": "./dist/plugins/types.js",
      "require": "./dist/plugins/types.cjs"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "cosmiconfig-typescript-loader": "^6.1.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20",
    "eslint": "^9.39.2",
    "tsup": "^8.0.0",
    "typescript": "^5",
    "typescript-eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.26.2",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
